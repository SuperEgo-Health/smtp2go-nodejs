{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
  },
  "include": [
    "src/lib",
  ],
  "exclude": [
    "src/lib/**/tests"
  ],
}